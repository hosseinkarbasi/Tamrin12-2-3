<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingLeft="8dp"
        android:paddingTop="3dp"
        android:paddingRight="8dp"
        android:paddingBottom="3dp">


        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:translationY="120dp"
            app:cardCornerRadius="36dp"
            app:cardElevation="8dp"
            app:layout_constraintEnd_toStartOf="@+id/card02"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">



        </com.google.android.material.card.MaterialCardView>

        <ImageView
            android:id="@+id/imageview1"
            android:layout_width="160dp"
            android:layout_height="160dp"
            app:imgUrl='@{"https://picsum.photos/1000?rand"+ System.currentTimeMillis()}' />
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:translationY="120dp"
            app:cardCornerRadius="36dp"
            app:cardElevation="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imageview2"
                android:layout_width="160dp"
                android:layout_height="160dp"
                app:imgUrl='@{"https://picsum.photos/1000?rand"+ System.currentTimeMillis()}' />

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:translationY="120dp"
            app:cardCornerRadius="36dp"
            app:cardElevation="8dp"
            app:layout_constraintEnd_toEndOf="@+id/card01"
            app:layout_constraintStart_toStartOf="@+id/card01"
            app:layout_constraintTop_toBottomOf="@+id/card01">

            <ImageView
                android:id="@+id/imageview3"
                android:layout_width="160dp"
                android:layout_height="160dp"
                app:imgUrl='@{"https://picsum.photos/1000?rand"+ System.currentTimeMillis()}' />

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:translationY="120dp"
            app:cardCornerRadius="36dp"
            app:cardElevation="8dp"
            app:layout_constraintEnd_toEndOf="@+id/card02"
            app:layout_constraintStart_toStartOf="@+id/card02"
            app:layout_constraintTop_toBottomOf="@+id/card02">

            <ImageView
                android:id="@+id/imageview4"
                android:layout_width="160dp"
                android:layout_height="160dp"
                app:imgUrl='@{"https://picsum.photos/1000?rand"+ System.currentTimeMillis()}' />
        </com.google.android.material.card.MaterialCardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>